<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#C0C0C0">
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#992416">
        
       <ImageView
        android:id="@+id/message_avatar"
        android:src="@drawable/git_logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:paddingLeft="5dp"
        android:contentDescription="@string/app_name" />

       <TextView
           android:id="@+id/message_avatar_name"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerVertical="true"
           android:layout_toRightOf="@+id/message_avatar"
           android:text="haozhenxiao"
           android:textColor="#FFFFFF"
           android:textSize="20sp"
           android:paddingLeft="10dp"
           android:paddingRight="5dp"
           android:textStyle="bold" />
        
    </RelativeLayout>
    <TextView
        android:id="@+id/message_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif"
        android:maxEms="30"
        android:singleLine="false"
        android:textStyle="bold"
        android:text="There's a bug for this part :("/>
</LinearLayout>