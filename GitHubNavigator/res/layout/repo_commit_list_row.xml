<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="51dip"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/commit_owner_icon2"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingLeft="2dip"        
        android:src="@drawable/ic_git_repo" />

    <TextView
        android:id="@+id/commit_actor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/commit_owner_icon2"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/commit_owner_icon2"
        android:textStyle="bold"
        android:textColor="#0020C2"
        android:text="haozhenxiao" />

    <TextView
        android:id="@+id/commit_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/commit_actor"
        android:layout_below="@+id/commit_actor"
        android:text="action2222222" />

</RelativeLayout>
